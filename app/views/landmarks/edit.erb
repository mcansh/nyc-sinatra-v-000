<h1>Update a Landmark</h1>

<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <fieldset>
    <label for="landmark_name">Landmark Name</label>
    <input id="landmark_name" type="text" name="landmark[name]" placeholder="name" value="<%= @landmark.name %>">
  </fieldset>

  <fieldset>
    <label for="landmark_year_completed">Landmark Year Completed</label>
    <input id="landmark_year_completed" type="text" name="landmark[year_completed]" placeholder="year completed" value="<%= @landmark.year_completed %>">
  </fieldset>

  <fieldset>
    <input type="submit" value="Edit Landmark">
  </fieldset>
</form>
