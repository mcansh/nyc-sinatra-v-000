<header>
  <h4><%= @figure.name %></h4>
  <h4><a href="/figures/<%= @figure.id %>/edit">Edit Figure</a></h4>
</header>

<h4>Landmarks</h4>
<% @figure.landmarks.each do |landmark| %>
  <p><a href="/landmarks/<%= landmark.id %>"><%= landmark.name %></a></p>
<% end %>

<h4>Titles</h4>
<% @figure.titles.each do |title| %>
  <p><a href="/titles/<%= title.id %>"><%= title.name %></a></p>
<% end %>
